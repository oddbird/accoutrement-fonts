theme: 'herman'
dest: docs/
src: sass/

shortcutIcon: ./favicon.png

groups:
  Public API:
    config: Webfont Configuration
    fonts: Using Webfonts
    a11y: Accessibility
    pseudo: Pseudo Elements
  Internal Logic:
    font-helpers: Webfont Helpers

herman:
  extraDocs:
    - name: Changelog
      path: CHANGELOG.md
